    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: viewer",
            "type": "debugpy",
            "request": "launch",
            "module": "neurofly.viewer.viewer",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python Debugger: reconstructor",
            "type": "debugpy",
            "request": "launch",
            "module": "neurofly.viewer.reconstructor",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python Debugger: segmenter",
            "type": "debugpy",
            "request": "launch",
            "module": "neurofly.viewer.segmenter",
            "console": "integratedTerminal",
            "justMyCode": false,
            "subProcess": true
        },
        {
            "name": "Python Debugger: skeletonizer",
            "type": "debugpy",
            "request": "launch",
            "module": "neurofly.viewer.skeletonizer",
            "console": "integratedTerminal",
            "justMyCode": false,
            "subProcess": true
        }
    ]
}